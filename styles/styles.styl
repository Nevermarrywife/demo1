*
  margin:0;
  padding:0;

body
  background: #F1FFE6;
 
.container
  width: 100%;

.frog
  width: 300px;
  height: 300px;
  margin:0 auto;
  position:relative;

.body
  width: 150px;
  height: 100px;
  background: #A3D768;
  position: absolute;
  top: 60px;
  left: 0;
  right: 0;
  margin:0 auto;
  border-radius: 50%;
  box-shadow: 6px 6px 0px 0px rgba(163, 215, 104, 0.3);

.blush
  width: 100px;
  height: 12px;
  position: absolute;
  top: 25px;
  left: 0;
  right: 0;
  margin:0 auto;

.blush
  &:before
    content:'';
    display: block;
    width: 15px;
    height: 100%;
    border-radius: 40%;
    background: #F7D2C9;
.blush
  &:after
    content:'';
    display: block;
    width: 15px;
    height: 100%;
    border-radius: 40%;
    background: #F7D2C9;
.blush
  &:after
    position: absolute;
    right: 0;
    top: 0;

.mouth
  width: 30px;
  height: 20px;
  background: #fff;
  margin:0 auto;
  position: absolute;
  left:0;
  right: 0;
  top: 45px;
  border-radius: 0 0 55% 55%;
  box-shadow: 2px 2px 0px 0px rgba(63, 106, 52, 0.3);

.eyes
  width: 120px;
  height: 20px;
  margin:0 auto;
  position:absolute;
  right:0px;
  left:0px;
  top:40px;
.eye
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: #A3D768;
  position: relative;
.eyes
  .eye-right
    position: absolute;
    right: 0;
    top: 0px;
.eyes 
  .eye-inner
    width: 25px;
    height: 25px;
    background: transparent !important;
    position: absolute;
    margin:0 auto;
    left:0;
    right:0;
    top: 8px;

@-webkit-keyframes hearts
0%
  -webkit-transform:scale(0.7);
  transform:scale(0.7);
100%
  -webkit-transform:scale(1);
  transform:scale(1);

@keyframes hearts
0%
  -webkit-transform:scale(0.7);
  transform:scale(0.7);
100%
  -webkit-transform:scale(1);
  transform:scale(1);

.eye-light
  &:before
    content:'';
    display: block;
    width: 13px;
    height: 18px;
    background: red;
    border-radius: 45% 45% 0 0;
.eye-light
  &:after
    content:'';
    display: block;
    width: 13px;
    height: 18px;
    background: red;
    border-radius: 45% 45% 0 0;

.eye-light
  &:before
 	position: absolute;
	top: 0;
	left: 3px;
	-webkit-transform:rotate(-45deg);
	transform:rotate(-45deg);
.eye-light
  &:after
 	position: absolute;
	top: 0;
	left: 3px;
	-webkit-transform:rotate(45deg);
	transform:rotate(45deg);